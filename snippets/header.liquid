<header>
  <div class="fixed left-0 top-0 z-[999] h-screen w-full translate-x-[-100%] transition" id="drawer">
    <div class="z-1 absolute left-0 top-0 h-full w-full" id="drawer-background"></div>
    <div class="relative z-10 flex h-full w-3/4 flex-col gap-8 bg-white p-4">
      <a href="/"><img height="40" width="34" class="w-10" src="{{ 'logo.svg' | asset_url }}" loading="eager"></a>
      <ul class="flex flex-col gap-8 text-lg font-medium">
        {% for link in linklists['main-menu'].links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="mx-auto flex w-full max-w-screen-xl items-center justify-between p-4">
    <div class="flex flex-1 gap-4 md:hidden">
      <img
        loading="eager"
        height="24"
        width="24"
        class="w-6 cursor-pointer"
        src="{{ 'hamburger.svg' | asset_url }}"
        id="hamburger-menu"
      >
      <a href="/search"
        ><img height="24" width="24" class="w-6" src="{{ 'search.svg' | asset_url }}" loading="eager"
      ></a>
    </div>
    <div class="flex flex-1 justify-center md:justify-start">
      <a href="/"><img height="40" width="34" class="w-10" src="{{ 'logo.svg' | asset_url }}" loading="eager"></a>
    </div>
    <div class="hidden flex-1 justify-center md:flex">
      <ul class="flex items-center gap-4 text-lg font-medium">
        {% for link in linklists['main-menu'].links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="flex flex-1 items-center justify-end gap-4">
      <div class="flex items-center gap-4">
        <a class="hidden md:block" href="/search?"
          ><img height="24" width="24" class="w-6" src="{{ 'search.svg' | asset_url }}" loading="eager"
        ></a>
        <div class="flex items-center gap-1">
          <a href="/cart"
            ><img height="24" width="24" class="w-6" src="{{ 'cart.svg' | asset_url }}" loading="eager"
          ></a>
          <p class="cart-count text-lg font-medium">{{ cart.item_count }}</p>
        </div>
      </div>
    </div>
  </div>
</header>
