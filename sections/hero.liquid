<div class="bg-black/90 max-w-screen-xl mx-auto h-[500px] md:h-[700px] bg-cover bg-no-repeat bg-center flex flex-col items-center gap-4 py-24 px-4" style="background-image: url('{{ 'snowboarding-hero.jpg' | asset_url }}')">
  <h1 class="text-3xl lg:text-5xl font-black text-center">{{ section.settings.header-text }}</h1>
  <p class="text-lg text-center">{{ section.settings.sub-header-text }}</p>
  <a class="rounded-md bg-black text-white py-2 px-4" href="#">Shop Snowboards</a>
</div>

{% schema %}
  {
    "name": "Index Hero",
    "tag": "section",
    "class": "index-hero",
    "limit": 1,
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "label": "Header Text",
        "id": "header-text",
        "default": "All Mountain All Season!"
      },
      {
        "type": "text",
        "label": "Sub Header Text",
        "id": "sub-header-text",
        "default": "The All New Hydrogen Snowboard Exclusively From Shopify"
      }
    ]
  }
{% endschema %}