<div class="mx-auto flex h-[500px] max-w-screen-xl flex-col items-center gap-4 bg-black/90 bg-hero-image bg-cover bg-center bg-no-repeat px-4 py-24 md:h-[700px]">
  <h1 class="text-center text-3xl font-black lg:text-5xl">{{ section.settings['header-text'] }}</h1>
  <p class="text-center text-lg">{{ section.settings['sub-header-text'] }}</p>
  <a class="rounded-md bg-black px-4 py-2 text-white transition hover:bg-indigo-600" href="#">Shop Snowboards</a>
</div>

{% schema %}
{
  "name": "Index Hero",
  "tag": "section",
  "class": "index-hero",
  "limit": 1,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "label": "Header Text",
      "id": "header-text",
      "default": "All Mountain All Season!"
    },
    {
      "type": "text",
      "label": "Sub Header Text",
      "id": "sub-header-text",
      "default": "The All New Hydrogen Snowboard Exclusively From Shopify"
    }
  ]
}
{% endschema %}
